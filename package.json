{
  "name": "dss",
  "version": "1.2.0-alpha.0",
  "description": "DeFi Strategy Standard (DSS) - Comprehensive testing & validation framework",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/sdk/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "format": "prettier --write \"**/*.{ts,js,json,md,sol}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md,sol}\""
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "solhint": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.sol": [
      "solhint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/VaultBricks/DSS.git"
  },
  "author": "VaultBricks Team",
  "license": "MIT"
}
